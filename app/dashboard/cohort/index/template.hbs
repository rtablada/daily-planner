{{#center-grid}}

  <div class="panel is-fullwidth">
    <div class="card-header">
      <h2 class="card-header-title">
          Cohorts
        </h2>

      {{#link-to "dashboard.cohort.new" class="card-header-icon" }}
        <span class="icon">
            <i class="fa fa-plus"></i>
          </span>
      {{/link-to}}
    </div>

    {{#each model as |cohort|}}
      <div class="panel-block">
        <p class="level is-mobile">
          <span class="level-left">{{cohort.name}} - {{cohort.startDate}}</span>
          <span class="level-right">
              {{link-to "More" "dashboard.cohort.detail" cohort}}
            </span>
        </p>
      </div>
    {{/each}}
  </div>
{{/center-grid}}
